<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/blue_add"
    android:orientation="vertical" >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bg"
            android:orientation="horizontal" >
            <ImageButton
                android:id="@+id/backtohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:text="Search"
                android:textColor="#ff6666"
                android:textSize="30dip" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_add" >

            <EditText
                android:id="@+id/tv_search_input"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_marginTop="8dip"
                android:background="@android:drawable/editbox_background_normal"
                android:drawableLeft="@drawable/search" />

            <LinearLayout
                android:id="@+id/radio_check"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_search_input"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/tv_search_radiogroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/tv_search_radiosearch"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="搜索话题"
                         android:textSize="30dip"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/tv_search_radiochannel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="搜索节目"
                         android:textSize="30dip"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/tv_search_radioconnple"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="搜索联系人"
                         android:textSize="30dip"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/tv_search_radioprogram"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="搜索电影"
                         android:textSize="30dip"
                        android:textColor="@color/black" />
                </RadioGroup>

                <Button
                    android:id="@+id/tv_search_searchbutton_001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/radio_check"
                    android:layout_gravity="center"
                     android:textSize="30dip"
                    android:text="搜索" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:focusable="false" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_check" >

                <Button
                    android:id="@+id/tv_search_today_hotpeople"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/wp_button"
                    android:clickable="true"
                    android:drawableLeft="@drawable/search_button"
                    android:focusable="true"
                    android:text="当天热门人物"
                    android:textColor="#ff6699"
                    android:layout_marginTop="20dip"
                    android:textSize="30dip" />

                <Button
                     android:layout_marginTop="20dip"
                    android:layout_below="@id/tv_search_today_hotpeople"
                    android:id="@+id/tv_search_week_hotpeople"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/wp_button"
                    android:drawableLeft="@drawable/search_button"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="本周热门人物"
                    android:textColor="#ff6699"
                    android:textSize="30dip"/>

                <Button
                     android:layout_marginTop="20dip"
                    android:layout_below="@id/tv_search_week_hotpeople"
                    android:id="@+id/tv_search_today_hottopic"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/wp_button"
                    android:drawableLeft="@drawable/search_button"
                    android:text="当天热门话题"
                    android:textColor="#ff6699"
                    android:textSize="30dip" />

                <Button
                     android:layout_marginTop="20dip"
                    android:layout_below="@id/tv_search_today_hottopic"
                    android:id="@+id/tv_search_week_hottopic"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/wp_button"
                    android:drawableLeft="@drawable/search_button"
                    android:gravity="center"
                    android:text="本周热门话题"
                    android:textColor="#ff6699"
                     android:textSize="30dip" />

                <Button
                     android:layout_marginTop="20dip"
                    android:layout_below="@id/tv_search_week_hottopic"
                    android:id="@+id/tv_search_day_hotprogram"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/wp_button"
                    android:drawableLeft="@drawable/search_button"
                    android:text="当天热门节目"
                    android:textColor="#ff6699"
                    android:textSize="30dip" />
                <Button
                     android:layout_marginTop="20dip"
                    android:layout_below="@id/tv_search_day_hotprogram"
                    android:id="@+id/tv_search_week_hotprogram"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/wp_button"
                    android:drawableLeft="@drawable/search_button"
                    android:gravity="center"
                    android:text="本周热门节目"
                    android:textColor="#ff6699"
                     android:textSize="30dip" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
