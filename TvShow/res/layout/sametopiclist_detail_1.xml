<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:background="@drawable/category_selector" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:id="@+id/tv_sametopiclist_userimage" 
		android:layout_width="20dip"
		android:layout_height="20dip" 
		android:layout_margin="5px"
		android:paddingBottom="10dip" 
		android:paddingRight="20dip"
		android:scaleType="centerInside"
		/>
		<TextView android:id="@+id/tv_sametopiclist_username" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#cccc99"
			android:textSize="22px" 
			/>
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
		<TextView android:id="@+id/tv_sametopiclist_topicname" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#ff6699"
			android:textSize="13px"
			android:ellipsize="start"
			android:marqueeRepeatLimit="marquee_forever"
			 />
	</LinearLayout>
</LinearLayout>
