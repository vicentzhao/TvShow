<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:gravity="center_vertical"
	android:orientation="vertical" android:id="@+id/list_item_layout"
	android:background="@drawable/category_selector" android:layout_width="fill_parent"
	android:descendantFocusability="blocksDescendants"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/subject_view" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:scrollbars="none"
		android:layout_weight="1.0" android:padding="10dip"
		android:background="#FFF5F5F5">
		<RelativeLayout android:layout_width="fill_parent"
			android:paddingTop="5dip" android:layout_height="200dip"
			android:background="@drawable/content_bg" android:id="@+id/section1">
			<TextView android:id="@+id/txtInfo" android:layout_width="fill_parent"
				android:text="电影详情" android:layout_height="wrap_content" />

			<RelativeLayout android:layout_width="wrap_content"
				android:paddingTop="10dip" android:layout_below="@id/txtInfo"
				android:layout_height="wrap_content" android:id="@+id/wrapper">

				<LinearLayout android:orientation="horizontal"
					android:id="@+id/wrapper" android:layout_height="fill_parent"
					android:layout_width="fill_parent">
					<ImageView android:id="@+id/tv_sametopiclist_movie_img"
						android:layout_width="100dip" android:layout_height="140dip" />

					<LinearLayout android:orientation="vertical"
						android:paddingLeft="15dip" android:layout_height="wrap_content"
						android:layout_width="fill_parent">

						<TextView android:id="@+id/tv_sametopiclist_movie_title"
							android:layout_width="fill_parent" android:textColor="@color/black"
							android:textSize="25dp" android:paddingTop="5dip"
							android:textStyle="bold" android:layout_height="wrap_content" />

						<TextView android:id="@+id/tv_sametopiclist_movie_key"
							android:paddingTop="10dip" android:layout_width="fill_parent"
							android:textColor="@color/black" android:textSize="15dp"
							android:layout_height="wrap_content" />
					   <TextView android:id="@+id/tv_sametopiclist_movie_actor"
								android:layout_width="wrap_content" android:textColor="#00f"
								android:textSize="18sp" android:paddingRight="10dip"
								 android:textStyle="bold" 
								android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				
				<TextView android:id="@+id/tv_sametopiclist_movie_desc"
					android:paddingTop="10dip" 
					android:layout_width="fill_parent" android:textColor="@color/black"
					android:textSize="18dp" android:paddingBottom="10dip"
					android:layout_height="fill_parent" />
			</RelativeLayout>
		</RelativeLayout>
	</ScrollView>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="0px" android:background="#FFF5F5F5" android:id="@+id/layout_books"
	android:orientation="vertical">
	<RelativeLayout android:id="@+id/mainRL"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_weight="1.0">
		<ListView android:scrollbarStyle="outsideInset" android:id="@+id/android_list"
			android:cacheColorHint="#00000000" android:paddingTop="5.0dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip" android:layout_marginRight="3.0dip"
			android:listSelector="@color/transparent" android:divider="@color/transparent"
			android:dividerHeight="5.0dip" android:layout_weight="1.0">
		</ListView>
	</RelativeLayout>
</LinearLayout>
		<LinearLayout style="@android:style/ButtonBar"
		android:layout_gravity="bottom" android:orientation="horizontal"
		android:id="@+id/book_toolbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">
		<Button android:id="@+id/btn_movie_new_about" android:text="相关话题"
			android:layout_width="0dip" android:layout_height="wrap_content"
			android:layout_weight="1" />
		<Button android:id="@+id/btn_movie_say" android:text="我要发言"
			android:layout_width="0dip" android:layout_height="wrap_content"
			android:layout_weight="1" />
		<Button android:id="@+id/movie_more" android:text="更多评论"
			android:layout_width="0dip" android:layout_height="wrap_content"
			android:layout_weight="1" />
		<Button android:id="@+id/btn_movie_exit" android:text="返回"
			android:layout_width="0dip" android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>	
</LinearLayout>