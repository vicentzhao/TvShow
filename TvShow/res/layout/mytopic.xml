<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/category_selector"
    android:baselineAligned="true"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	   
	    android:orientation="horizontal" >
		<LinearLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:gravity="left"
		    android:orientation="vertical" >
			<ImageView android:id="@+id/tv_homeline_userimage" android:layout_width="50dip"
				android:layout_height="50dip" android:scaleType="fitCenter" />
             <TextView android:textColor="#660099" android:textSize="11dip"
			    android:id="@+id/tv_homeline_username"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:text="正在读取。。"
				android:layout_height="wrap_content" />
		 </LinearLayout>
 		  <TextView
 		      android:id="@+id/tv_homeline_comment"
 		      android:layout_width="wrap_content"
 		      android:layout_height="wrap_content"
 		      android:textColor="#ff33cc"
 		      android:textSize="15dip"
 		      android:textStyle="bold" />
		<LinearLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="wrap_content"
		    android:layout_height="70dip"
		    android:layout_gravity="right"
		    android:gravity="right"
		    android:orientation="vertical" >
			<ImageView android:id="@+id/tv_homeline_filmimage" android:layout_width="50dip" 
			    android:src="@drawable/icon"
				android:layout_height="50dip" android:scaleType="fitCenter" />
             <TextView android:textColor="#6633ff" android:textSize="11dip"
				android:maxHeight="50dip" android:id="@+id/tv_homeline_filmname"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:text="hello"
				android:layout_height="wrap_content" />
		</LinearLayout>
	 </LinearLayout>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
			android:paddingLeft="15dip" android:layout_height="fill_parent"
			android:background="#330033"
			android:layout_width="fill_parent">
			<TextView android:textColor="#99ff33" android:textSize="12dip"
				android:maxHeight="30dip" android:id="@+id/tv_homeline_title"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView android:textColor="#ff6699" android:textSize="10dip"
			     android:gravity="right"
				android:layout_gravity="right"
				android:id="@+id/tv_homeline_currenttime" android:layout_width="wrap_content"
				android:maxHeight="60dip" android:layout_height="wrap_content" />
		</LinearLayout>
</LinearLayout>