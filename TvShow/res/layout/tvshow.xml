<?xml version="1.0" encoding="utf-8"?>
 <ScrollView
      android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:isScrollContainer="true"
		    xmlns:android="http://schemas.android.com/apk/res/android"
 >

     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal"
    	    >
    	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:id="@+id/tv_show_lay1"
    	    >
    	    <LinearLayout
    	        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:background="@drawable/title_bg"
		    	
    	        >
		    	<ImageView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		    	    android:src="@drawable/home"
		    	    android:layout_marginRight="10dp"
		    	    android:scaleType="centerInside"
		    	    />
	    	    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		    	    android:text="影视电视列表"
		    	    android:textStyle="bold"
		    	    android:textSize="30dip"
		    	    android:textColor="#ff6666"
		    	    android:layout_gravity="center"
		    	    android:ellipsize="end"
	    	    />
	    	 
	    	   </LinearLayout> 
	    	   </RelativeLayout>
	  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal"
		      android:layout_below="@id/tv_show_lay1"
    	    >  
        <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/blue_add" >	
    	<Button  android:id="@+id/tv_tvshow_allchanles"
						android:width="100dp"
						android:background="@drawable/wp_button"
						android:textColor="#0099ff"
						android:textSize="30dip"
						android:drawableLeft="@drawable/tv_show"
						android:text="所有电视频道"
						android:layout_margin="5dip"
						android:layout_height="wrap_content" 
						android:layout_width="match_parent"></Button>
						<Button style="@style/styleName"  android:id="@+id/tv_tvshow_alltvitem"
						android:text="@string/all_tv_item"
						android:textSize="30dip"
							android:drawableLeft="@drawable/tv_show"
						android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
						<Button  android:id="@+id/tv_tvshow_tvitemsupply"
						android:text="电视节目热点推荐"
						android:layout_margin="5dip"
						android:width="100dp"
						android:drawableLeft="@drawable/tv_show"
						android:background="@drawable/wp_button"
						android:textColor="#0099ff"
						android:textSize="30dip" 
						android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
						<Button  android:id="@+id/tv_tvshow_alltvprogram"
						android:width="100dp" 
						android:text="所有电视剧"
						android:background="@drawable/wp_button"
						android:drawableLeft="@drawable/tv_show"
						android:textColor="#0099ff"
						android:textSize="30dip"
						android:layout_margin="5dip"
						android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
						<Button  android:id="@+id/tv_tvshow_poptvprogramsupply"
						android:width="100dp" 
						android:background="@drawable/wp_button"
						android:textColor="#0099ff"
						android:textSize="30dip"
						android:drawableLeft="@drawable/tv_show"
						android:text="电视剧热点推荐"
						android:layout_margin="5dip"
						android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
						<Button  android:id="@+id/tv_tvshow_allmovie"
						android:width="100dip" 
						android:background="@drawable/wp_button"
						android:textColor="#0099ff"
						android:textSize="30dip"
						android:layout_margin="5dip"
						android:text="所有电影"
							android:drawableLeft="@drawable/tv_show"
						android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
						<Button  android:id="@+id/tv_tvshow_popmoviesupply"
						android:layout_margin="5dip"
						android:width="100dp" 
						android:drawableLeft="@drawable/tv_show"
						android:background="@drawable/wp_button"
						android:textColor="#0099ff"
						android:textSize="30dip"
						android:text="电影热点推荐"
						android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
		
</LinearLayout>
</RelativeLayout>
</RelativeLayout>
</ScrollView>
