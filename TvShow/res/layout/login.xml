<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scroll_login" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:scrollbars="vertical"
	android:background="@drawable/splash_bg"
	>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingLeft="10dip" android:paddingRight="10dip" android:id="@+id/inner_login"
		android:paddingBottom="10dip" >

		<ImageView 
		    android:layout_marginTop="40dip"
		    android:id="@+id/Logo" android:paddingTop="10dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="left" android:paddingLeft="20dip"
			android:paddingBottom="10dip" android:paddingRight="20dip"
			android:src="@drawable/logo" android:scaleType="centerInside">
		</ImageView>

		<RelativeLayout android:layout_width="fill_parent"
			android:paddingTop="5dip" android:layout_below="@id/Logo"
			android:layout_height="fill_parent" 
			android:id="@+id/section1"
			>

			<TextView android:id="@+id/l_section1" android:layout_width="fill_parent"
			    android:layout_marginTop="10dip"
				android:layout_height="wrap_content" 
				/>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_below="@id/l_section1" android:layout_height="wrap_content"
				android:id="@+id/wrapper"
				android:orientation="vertical"
				android:layout_marginTop="10dip"
				>
				<TextView  android:id="@+id/Textviewname"
					android:layout_width="wrap_content"
					android:layout_marginTop="20dip"
					android:text="用户名:"
					android:textSize="30sp"
					android:layout_height="wrap_content" android:minHeight="40dip"
				 	android:textColor="@color/black"
					android:layout_below="@id/wrapper"></TextView>
				<EditText  android:id="@+id/Editname"
					android:layout_width="fill_parent"
					android:layout_marginTop="20dip"
					android:text="aihua.yin@gmail.com"
					android:layout_height="wrap_content" android:minHeight="60dip"
					android:background="@android:drawable/editbox_background"
					></EditText>
				<TextView  android:id="@+id/Textviewpass"
					android:layout_width="wrap_content"
					android:layout_marginTop="20dip"
					android:text="密码:"
					android:textSize="30sp"
					android:layout_height="wrap_content" android:minHeight="40dip"
				 	android:textColor="@color/black"
					android:layout_below="@id/wrapper"></TextView>
                <EditText  android:id="@+id/EditTextPassword"
					android:layout_width="fill_parent"
					android:layout_marginTop="20dip"
					android:layout_height="wrap_content" android:minHeight="60dip"
					android:password="true" 
					android:text="1"
					></EditText>

				<LinearLayout android:layout_width="fill_parent"
					android:gravity="center" android:paddingTop="20dip"
					android:paddingBottom="20dip" android:layout_height="wrap_content"
					android:layout_below="@id/EditTextPassword">
					<Button  android:id="@+id/btnLogin"
						android:width="100dp" android:layout_width="wrap_content"
						android:background="@drawable/wp_button_small"
						android:text="@string/user_login"
						android:layout_height="wrap_content"></Button>
					<Button  android:id="@+id/btnExit"
						android:width="100dp" android:layout_width="wrap_content"
						android:background="@drawable/wp_button_small"
						android:text="@string/btnCancle"
						android:layout_height="wrap_content"></Button>
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>
	</RelativeLayout>
</ScrollView>
