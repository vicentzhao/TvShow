<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    
    android:background="@color/blue_add" android:orientation="vertical" android:layout_width="wrap_content">
    <include layout="@layout/titlebar" />
    	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
    	    >
    	    <LinearLayout
    	        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:background="@drawable/title_bg"
    	        >
		    	<ImageView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		    	    android:src="@drawable/home"
		    	    android:layout_marginRight="10dp"
		    	    android:scaleType="centerInside"
		    	    />
	    	    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		    	    android:text="发言详情"
		    	    android:textSize="20dip"
		    	    android:textColor="#ff6666"
		    	    android:layout_gravity="center"
		    	    android:ellipsize="end"
	    	    />
	    	  
	    	   </LinearLayout>
    	 </RelativeLayout>
	   	 <ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:isScrollContainer="true"
	   	     >
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/blue_add"
	        >
        	
        	<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:id="@+id/radio_check"
        	    >
	    	    <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="40dip"
			    android:textColor="#ff6666"
			    android:layout_marginLeft="2dip"
			    android:layout_marginRight="2dip"
			    android:layout_marginTop="8dip"
			    android:id="@+id/tv_tvshow_topicdetial_title"
        	    />
        	   <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="150dip"
			    android:layout_marginLeft="2dip"
			    android:layout_marginRight="2dip"
			    android:layout_marginTop="8dip"
			    android:background="@android:drawable/editbox_background_normal"
			    android:id="@+id/tv_topicdetial_comment"
        	    />
        	    <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="40dip"
			    android:layout_marginLeft="2dip"
			    android:layout_marginRight="2dip"
			    android:layout_marginTop="8dip"
			   android:background="#6666ff"
			    android:layout_gravity="right"
			    android:gravity="right"
			    android:id="@+id/tv_topicdetial_current"
        	    />
        	    	<EditText
				    android:layout_width="fill_parent"
				    android:layout_height="2dip"
				    android:focusable="false"
				    />
        	    <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:id="@+id/radio_check"
        	    >
	        	   
				<Button 
				    android:layout_width="100dip"
				    android:layout_height="wrap_content"
	        	    android:text="同类电影"
	        	    android:layout_below="@id/radio_check"
	        	    android:id="@+id/tv_topicdetia_sametopic"
	        	    android:layout_gravity="center"
	        	    android:background="@drawable/wp_button"
	        	    
        	    />
        	    <Button 
				    android:layout_width="100dip"
				    android:layout_height="wrap_content"
	        	    android:text="我要发言"
	        	    android:layout_below="@id/radio_check"
	        	    android:id="@+id/tv_topicdetial_isay"
	        	    android:layout_gravity="center"
	        	    android:background="@drawable/wp_button"
	        	    
        	    />
        	    <Button 
				    android:layout_width="100dip"
				    android:layout_height="wrap_content"
	        	    android:text="评论发言"
	        	    android:layout_below="@id/radio_check"
	        	    android:id="@+id/tv_topicdetial_disc"
	        	    android:layout_gravity="center"
	        	    android:background="@drawable/wp_button"
        	    />
        	    </LinearLayout>
        	      <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:id="@+id/radio_check"
        	    >
	        	   
				<Button 
				    android:layout_width="100dip"
				    android:layout_height="wrap_content"
	        	    android:text="返回上一页"
	        	    android:layout_below="@id/radio_check"
	        	    android:id="@+id/tv_sametopic_reback"
	        	    android:layout_gravity="center"
	        	    android:background="@drawable/wp_button"
	        	    
        	    />
        	    <Button 
				    android:layout_width="100dip"
				    android:layout_height="wrap_content"
	        	    android:text="返回我的主页"
	        	    android:layout_below="@id/radio_check"
	        	    android:id="@+id/tv_sametopic_backtohome"
	        	    android:layout_gravity="center"
	        	    android:background="@drawable/wp_button"
        	    />
        	     <Button 
				    android:layout_width="100dip"
				    android:layout_height="wrap_content"
	        	    android:text="返回话题列表"
	        	    android:layout_below="@id/radio_check"
	        	    android:id="@+id/tv_sametopic_backtotopic"
	        	    android:layout_gravity="center"
	        	    android:background="@drawable/wp_button"
        	    />
        	   
        	    </LinearLayout>
        	</LinearLayout>
        	<RelativeLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/radio_check"
        	    >
        	</RelativeLayout>
	    </RelativeLayout>
	    </ScrollView>
</LinearLayout>
