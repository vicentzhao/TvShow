<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/blue_add"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:background="@drawable/title_bg_night"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <ImageButton
                android:id="@+id/backtohome"
                android:layout_width="40dip"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="2dip"
                android:src="@drawable/back_home_selector" />
            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical" >
                <TextView
                    android:id="@+id/myTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="话题详情"
                    android:textColor="@color/titletextcolor"
                    android:textSize="21.0sp" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="60.0dip"
                android:layout_height="29.0dip"
                android:layout_gravity="center"
                android:layout_marginRight="5.0dip"
                android:background="@color/transparent"
                android:src="@drawable/back_night_selector" />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true" >
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_add" >
            <LinearLayout
                android:id="@+id/radio_check"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/category_selector"
                    android:orientation="horizontal" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >
                        <ImageView
                            android:id="@+id/tv_topic_userimage"
                            android:layout_width="120dip"
                            android:layout_height="120dip"
                            android:scaleType="fitCenter" >
                        </ImageView>
                        <TextView
                            android:id="@+id/tv_topic_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#660099"
                            android:textSize="28dip"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_topic_comment"
                        android:layout_width="300dip"
                        android:layout_height="fill_parent"
                        android:ellipsize="marquee"
                        android:height="180dip"
                        android:textSize="28sp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollbars="vertical"
                        android:textColor="#ff33cc"
                        android:textStyle="bold"
                        android:width="100dip" >
                    </TextView>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_homeline_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于。。"
                    android:textColor="#660099"
                    android:textSize="31dip"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="300dip"
                    android:background="@drawable/category_selector"
                    android:orientation="horizontal" >
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >
                        <ImageView
                            android:id="@+id/tv_homeline_programimage"
                            android:layout_width="130dip"
                            android:layout_height="150dip"
                            android:scaleType="fitCenter" />
                        <TextView
                            android:id="@+id/tv_homeline_programname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正在读取。。"
                            android:textColor="#660099"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/tv_homeline_programdirector"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:height="40dip"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollbars="vertical"
                            android:textColor="#ff33cc"
                            android:textSize="28dip"
                            android:textStyle="bold"
                            android:width="20dip" />
                        <TextView
                            android:id="@+id/tv_homeline_programactor"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:height="40dip"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollbars="vertical"
                            android:textColor="#ff33cc"
                            android:textSize="28dip"
                            android:textStyle="bold"
                            android:width="100dip" />

                        <TextView
                            android:id="@+id/tv_homeline_desc"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:ellipsize="marquee"
                            android:height="40dip"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollbars="vertical"
                            android:textColor="#ff33cc"
                            android:textSize="28dip"
                            android:textStyle="bold"
                            android:width="100dip" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/radio_check"
                    android:layout_marginTop="30dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/tv_topicdetia_reviewprogram"
                        android:layout_weight="1"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/radio_check"
                        android:layout_gravity="center"
                        android:background="@drawable/wp_button"
                        android:text="电影评论" />
                    <Button
                        android:id="@+id/tv_topicdetial_programdetail"
                        android:layout_weight="1"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/radio_check"
                        android:layout_gravity="center"
                        android:background="@drawable/wp_button"
                        android:text="电影详情" />
                    <Button
                        android:id="@+id/tv_sametopic_isaytopic"
                        android:layout_weight="1"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/wp_button"
                        android:text="发表话题" >
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/radio_check"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/tv_sametopic_backtohome"
                        android:layout_width="100dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/radio_check"
                        android:layout_gravity="center"
                        android:background="@drawable/wp_button"
                        android:text="返回主页" />
                    <Button
                        android:id="@+id/tv_sametopic_ctopic"
                        android:layout_width="100dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/radio_check"
                        android:layout_gravity="center"
                        android:background="@drawable/wp_button"
                        android:text="点击收藏" />
                    <Button
                        android:id="@+id/tv_sametopic_topicpost"
                        android:layout_width="100dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/radio_check"
                        android:layout_gravity="center"
                        android:background="@drawable/wp_button"
                        android:text="话题相关帖" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>