<?xml version="1.0" encoding="utf-8"?>

<resources>
	<style name="TextViewStyleTabMainNav">
		<item name="android:textSize">12dip</item>
		<item name="android:textColor">@drawable/tab_main_nav_text_selector
		</item>
	</style>

	<style name="CustomWindowTitleBackground">
		<item name="android:background">@drawable/title_bg_night</item>
	</style>
	<style name="activityTitlebar" parent="android:Theme">
		<item name="android:windowTitleSize">35dip</item>
		<item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground
		</item>
	</style>
	
	<style name="styleName" parent="android:Widget.Button">
		<item name="android:background">@drawable/wp_button</item>
		<item name="android:drawableLeft">@drawable/tv_show</item>
		<item name="android:layout_margin">5dip</item>
		<item name="android:textColor">#0099ff</item>
		<item name="android:textSize">20dip</item>
		<item name="android:width">100dp</item>
	</style>
	<style name="AnimationActivity" parent="@android:style/Animation.Activity" mce_bogus="1">    

   <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>          

   <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>          

  <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>   

   <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>      

</style>   

 
</resources>

